<section class="login-out-container">
  <div class="signup-form">
    <h2>Sign Up</h2>
    <form>
      <label>
        <input type="text" placeholder="Username" id="username-signup" />
      </label>
      <label>
        <input type="email" placeholder="Email" id="email-signup" />
      </label>
      <label>
        <input type="password" placeholder="Password" id="password-signup" />
      </label>
      <button type="submit">Signup</button>
    </form>
  </div>

  <div class="login-form">
    <h2>Sign In</h2>
    <form>
      <label>
        <input type="text" placeholder="Email" id="email-login" />
      </label>
      <label>
        <input type="password" placeholder="Password" id="password-login" />
      </label>
     
      <button type="submit">Login</button>
      
    </form>
  </div>

</section>

<script src="./javascript/sign-up.js"></script>
<script src="/javascript/login.js"></script>